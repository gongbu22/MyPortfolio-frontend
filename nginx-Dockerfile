# COPY nginx/default.conf /etc/nginx/conf.d/default.conf
# COPY ./public/imgs /usr/share/nginx/html/public/imgs

# EXPOSE 80
# CMD ["nginx", "-g", "daemon off;"]

# Nginx 이미지 사용
FROM nginx:alpine

# Nginx 설정 파일을 복사
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

# Node.js에서 빌드된 정적 파일 복사
COPY --from=node /app/dist /usr/share/nginx/html

# Nginx의 port 80을 노출
EXPOSE 80

# Nginx 실행
CMD ["nginx", "-g", "daemon off;"]
