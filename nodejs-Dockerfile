FROM node:18-slim



WORKDIR /app

COPY package*.json /app/
COPY tailwind.config.js /app/
COPY vite.config.js /app/
COPY postcss.config.cjs /app/
RUN npm install --no-optional

COPY public/vite.svg /app/public/vite.svg
COPY src/ /app/src/
COPY index.html /app/

EXPOSE 5173

CMD ["npm", "run", "dev"]
